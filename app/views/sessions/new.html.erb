<h1>Sign in</h1>
<%= form_for(:session,url:sessions_path) do |f|%>
  <%=f.label:email%>
  <%=f.text_field :email%>

  <%=f.label :password%>
  <%=f.password_field :password%>

  <%=f.submit "Sign in",class: "btn btn-large btn-primary"%>
<%end%>
<div class="reset_p">
  <p>forget password?</p>
<%=form_for "users",:url=>{:controller=>"users",:action=>'sendagain'} do |f|%>
  <%=label :user,:email%>
  <%=text_field :user,:email%>
  <%= submit_tag ["send email"]%>
<%end%>
</div>
